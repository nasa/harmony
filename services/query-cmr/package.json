{
  "name": "@harmony/query-cmr",
  "version": "0.0.0",
  "description": "Harmony task that queries the CMR for an incoming message and produces a sources file as output",
  "main": "app/query-granules.ts",
  "scripts": {
    "start": "ts-node app/server.ts",
    "start-dev": "strict-npm-engines && ts-node-dev --no-notify -r tsconfig-paths/register --watch app/views --respawn app/server",
    "start-dev-fast": "TS_NODE_TRANSPILE_ONLY=true ts-node-dev --no-notify -r tsconfig-paths/register --respawn --inspect=127.0.0.1:9230 app/server",
    "test": "tsc && eslint --ext .ts . && nyc mocha && better-npm-audit audit",
    "test-fast": "TS_NODE_TRANSPILE_ONLY=true mocha",
    "lint": "eslint --ext .ts .",
    "coverage": "nyc mocha",
    "docker-example": "docker run --rm -it --env SHARED_SECRET_KEY=foo --env CMR_ENDPOINT='https://cmr.uat.earthdata.nasa.gov' -v $(pwd)/example:/app/example -v $(pwd)/temp:/app/temp harmonyservices/query-cmr:${VERSION:-latest}",
    "prebuild": "./bin/prebuild",
    "prebuild-m1": "./bin/prebuild",
    "build": "tsc --project ./tsconfig.build.json && docker build -t harmonyservices/query-cmr:${VERSION:-latest} .",
    "build-m1": "tsc --project ./tsconfig.build.json && docker build --platform linux/amd64 -t harmonyservices/query-cmr:${VERSION:-latest} .",
    "build-multi": "./bin/prebuild && tsc --project ./tsconfig.build.json && docker buildx build --platform=linux/amd64,linux/arm64 -t harmonyservices/query-cmr:${VERSION:-latest} --push .",
    "push-image": "./bin/push-image ${VERSION:-latest}",
    "publish": "docker push harmonyservices/query-cmr:${VERSION:-latest}",
    "better-audit": "better-npm-audit audit"
  },
  "keywords": [
    "NASA",
    "EOSDIS",
    "Harmony",
    "Services",
    "Cumulus"
  ],
  "author": "NASA EOSDIS",
  "license": "Apache-2.0",
  "lockedDependenciesComments": {
    "chai": "Version 5 requires ESM which breaks running mocha. It's not clear what changes need to be made to fix it.",
    "chai-as-promised": "Version 8 requires ESM",
    "@types/chai": "Chai dependency is locked",
    "@types/chai-as-promised": "chai-as-promised dependency is locked",
    "eslint": "The eslint-config-airbnb-typescript project is no longer maintained and limits eslint < 9.",
    "node-fetch": "Version 3 requires ESM and has other breaking changes - see https://github.com/node-fetch/node-fetch/blob/main/docs/v3-UPGRADE-GUIDE.md",
    "shpjs": "Version 5 requires ESM",
    "@aws-sdk/client-s3": "Downgraded this library to a known working version due to a problem when more than 900 granules were requested the task would fail.",
    "@aws-sdk/util-format-url": "Downgraded because it causes open-telemetry issues with two different versions of smithy running which result in OOM crashes with large numbers of granules."
  },
  "dependencies": {
    "@aws-sdk/client-s3": "3.437.0",
    "@aws-sdk/credential-provider-imds": "^3.374.0",
    "@aws-sdk/hash-node": "^3.374.0",
    "@aws-sdk/protocol-http": "^3.374.0",
    "@aws-sdk/s3-request-presigner": "^3.437.0",
    "@aws-sdk/url-parser": "^3.374.0",
    "@aws-sdk/util-format-url": "3.433.0",
    "@harmony/util": "file:../../packages/util",
    "@linzjs/geojson": "^7.1.0",
    "@mapbox/geojson-rewind": "^0.5.2",
    "@tmcw/togeojson": "^6.0.0",
    "@turf/circle": "^7.2.0",
    "@types/shpjs": "^3.4.1",
    "@xmldom/xmldom": "^0.9.6",
    "ajv": "^8.12.0",
    "ajv-formats": "^3.0.1",
    "class-validator": "^0.14.0",
    "dotenv": "^16.4.7",
    "express": "^4.17.1",
    "form-data": "^4.0.4",
    "geo-split": "^0.1.2",
    "geojson-antimeridian-cut": "^0.1.0",
    "lodash": "^4.17.21",
    "lodash.camelcase": "^4.3.0",
    "lru-cache": "^11.0.2",
    "node-fetch": ">=2.7.0 <3.0.0",
    "shpjs": ">=4.0.4 <5.0.0",
    "tmp": "^0.2.4",
    "tmp-promise": "^3.0.3",
    "tweetnacl": "^1.0.3",
    "tweetnacl-util": "^0.15.1",
    "uuid": "^11.0.3",
    "wellknown": "^0.5.0",
    "winston": "^3.10.0",
    "yargs": "^17.7.2"
  },
  "engines": {
    "node": "^22.14.0",
    "npm": ">=8"
  },
  "devDependencies": {
    "@types/chai": ">=4.3.20 <5.0.0",
    "@types/chai-as-promised": ">=7.1.8 <8.0.0",
    "@types/geojson": "^7946.0.8",
    "@types/lodash": "^4.14.177",
    "@types/lodash.camelcase": "^4.3.6",
    "@types/mocha": "^10.0.10",
    "@types/mock-aws-s3": "^2.6.2",
    "@types/mustache": "^4.1.2",
    "@types/node": "^22.10.1",
    "@types/node-fetch": "^2.5.7",
    "@types/shpjs": "^3.4.1",
    "@types/sinon": "^17.0.3",
    "@types/superagent": "^8.1.9",
    "@types/supertest": "^6.0.2",
    "@types/tmp": "^0.2.4",
    "@types/uuid": "^10.0.0",
    "@types/yargs": "^17.0.5",
    "@typescript-eslint/eslint-plugin": "^8.18.0",
    "@typescript-eslint/parser": "^8.18.0",
    "better-npm-audit": "^3.7.3",
    "chai": ">=4.5.0 <5.0.0",
    "chai-as-promised": ">=7.1.2 <8.0.0",
    "eslint": ">=8.57.1 <9.0.0",
    "mocha": "^11.0.1",
    "nyc": "^17.1.0",
    "rimraf": "^6.0.1",
    "sinon": "^19.0.2",
    "ts-node": "^10.4.0",
    "typescript": "^5.1.6"
  },
  "overrides": {
    "aws-sdk": "2.1692.0",
    "braces": "^3.0.3",
    "cross-spawn": "7.0.5",
    "fast-xml-parser": "4.4.1"
  }
}
