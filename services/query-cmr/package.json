{
  "name": "@harmony/query-cmr",
  "version": "0.0.0",
  "description": "Harmony task that queries the CMR for an incoming message and produces a sources file as output",
  "main": "app/query-granules.ts",
  "scripts": {
    "start": "ts-node app/server.ts",
    "start-dev": "strict-npm-engines && ts-node-dev --no-notify -r tsconfig-paths/register --watch app/views --respawn app/server",
    "start-dev-fast": "TS_NODE_TRANSPILE_ONLY=true ts-node-dev --no-notify -r tsconfig-paths/register --respawn --inspect=127.0.0.1:9230 app/server",
    "test": "tsc && eslint --ext .ts . && nyc mocha && better-npm-audit audit",
    "test-fast": "TS_NODE_TRANSPILE_ONLY=true mocha",
    "lint": "eslint --ext .ts .",
    "coverage": "nyc mocha",
    "docker-example": "docker run --rm -it --env SHARED_SECRET_KEY=foo --env CMR_ENDPOINT='https://cmr.uat.earthdata.nasa.gov' -v $(pwd)/example:/app/example -v $(pwd)/temp:/app/temp harmonyservices/query-cmr:${VERSION:-latest}",
    "prebuild": "./bin/prebuild",
    "prebuild-m1": "./bin/prebuild",
    "build": "tsc --project ./tsconfig.build.json && docker build -t harmonyservices/query-cmr:${VERSION:-latest} .",
    "build-m1": "tsc --project ./tsconfig.build.json && docker build --platform linux/amd64 -t harmonyservices/query-cmr:${VERSION:-latest} .",
    "push-image": "./bin/push-image ${VERSION:-latest}",
    "publish": "docker push harmonyservices/query-cmr:${VERSION:-latest}",
    "better-audit": "better-npm-audit audit"
  },
  "keywords": [
    "NASA",
    "EOSDIS",
    "Harmony",
    "Services",
    "Cumulus"
  ],
  "author": "NASA EOSDIS",
  "license": "Apache-2.0",
  "dependencies": {
    "@aws-sdk/client-s3": "^3.342.0",
    "@aws-sdk/credential-provider-imds": "^3.342.0",
    "@aws-sdk/hash-node": "^3.342.0",
    "@aws-sdk/protocol-http": "^3.342.0",
    "@aws-sdk/s3-request-presigner": "^3.342.0",
    "@aws-sdk/url-parser": "^3.342.0",
    "@aws-sdk/util-format-url": "^3.342.0",
    "@harmony/util": "file:../../packages/util",
    "ajv": "^8.12.0",
    "ajv-formats": "^2.1.1",
    "class-validator": "^0.14.0",
    "dotenv": "^10.0.0",
    "express": "^4.17.1",
    "form-data": "^4.0.0",
    "lodash": "^4.17.21",
    "lodash.camelcase": "^4.3.0",
    "node-fetch": "^2.6.1",
    "tmp": "^0.2.1",
    "tmp-promise": "^3.0.3",
    "tweetnacl": "^1.0.3",
    "tweetnacl-util": "^0.15.1",
    "uuid": "^8.3.2",
    "winston": "^3.10.0",
    "yargs": "^16.2.0"
  },
  "engines": {
    "node": "^20.9.0",
    "npm": ">=8"
  },
  "devDependencies": {
    "@types/chai": "^4.2.22",
    "@types/chai-as-promised": "^7.1.3",
    "@types/geojson": "^7946.0.8",
    "@types/lodash": "^4.14.177",
    "@types/lodash.camelcase": "^4.3.6",
    "@types/mocha": "^9.0.0",
    "@types/mock-aws-s3": "^2.6.2",
    "@types/mustache": "^4.1.2",
    "@types/node": "^16.18.46",
    "@types/node-fetch": "^2.5.7",
    "@types/shpjs": "^3.4.1",
    "@types/sinon": "^10.0.6",
    "@types/superagent": "^4.1.13",
    "@types/supertest": "^2.0.10",
    "@types/tmp": "^0.2.2",
    "@types/uuid": "^8.3.1",
    "@types/yargs": "^17.0.5",
    "@typescript-eslint/eslint-plugin": "^6.5.0",
    "@typescript-eslint/parser": "^6.5.0",
    "better-npm-audit": "^3.7.3",
    "chai": "^4.2.0",
    "chai-as-promised": "^7.1.1",
    "eslint": "^8.48.0",
    "mocha": "^9.1.3",
    "nyc": "^15.1.0",
    "rimraf": "^5.0.1",
    "sinon": "^12.0.1",
    "ts-node": "^10.4.0",
    "typescript": "^5.1.6"
  }
}