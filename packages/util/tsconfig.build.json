{
  "compilerOptions": {
      "module": "commonjs",
      "baseUrl": ".",
      "moduleResolution": "node",
      "target": "ES2021",
      "esModuleInterop": true,
      "experimentalDecorators": true,
      "emitDecoratorMetadata": true,
      "allowJs": true,
      "noImplicitAny": false,
      "sourceMap": true,
      "outDir": "built",
      "typeRoots": [
        "node_modules/@types"
      ]
  },
  "include": ["."],
  "exclude": ["./node_modules", "coverage"]
}
