{
  "name": "@harmony/util",
  "version": "0.0.0",
  "description": "Utility modules related to Harmony",
  "main": "index.ts",
  "scripts": {
    "test": "strict-npm-engines && eslint --ext .ts . && nyc mocha && better-npm-audit audit -l moderate",
    "test-fast": "TS_NODE_TRANSPILE_ONLY=true mocha",
    "test-bail": "TS_NODE_TRANSPILE_ONLY=true mocha --bail",
    "build": "rimraf built/* && tsc",
    "build-m1": "rimraf built/* && tsc",
    "build-multi": "rimraf built/* && tsc",
    "lint": "eslint --ext .ts .",
    "coverage": "nyc mocha",
    "better-audit": "better-npm-audit audit -l moderate"
  },
  "engines": {
    "node": "^22.14.0",
    "npm": ">=8"
  },
  "nyc": {
    "all": true,
    "check-coverage": true,
    "extension": [
      ".ts",
      ".tsx"
    ],
    "exclude": [
      "node_modules/**",
      "build/**",
      "test/**"
    ],
    "lines": 70,
    "reporter": [
      "lcov",
      "text"
    ],
    "include": [
      "**/*.ts"
    ]
  },
  "keywords": [
    "NASA",
    "EOSDIS",
    "Harmony",
    "Services"
  ],
  "author": "NASA EOSDIS Harmony team",
  "license": "Apache-2.0",
  "lockedDependenciesComments": {
    "chai": "Version 5 requires ESM which breaks running mocha. It's not clear what changes need to be made to fix it.",
    "@types/chai": "Chai dependency is locked",
    "eslint": "The eslint-config-airbnb-typescript project is no longer maintained and limits eslint < 9."
  },
  "dependencies": {
    "class-validator": "^0.14.0",
    "dotenv": "^16.3.1",
    "lodash": "^4.17.21",
    "reflect-metadata": "^0.2.2",
    "winston": "^3.10.0"
  },
  "devDependencies": {
    "@types/chai": ">=4.2.22 <5.0.0",
    "@types/node": "^22.13.10",
    "chai": ">=4.3.7 <5.0.0",
    "eslint": ">=8.43.0 <9.0.0",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-config-airbnb-typescript": "^18.0.0",
    "eslint-plugin-import": "^2.27.5",
    "eslint-plugin-jsdoc": "^50.6.0",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-tsdoc": "^0.4.0",
    "mocha": "^11.0.1",
    "nyc": "^17.1.0",
    "rimraf": "^6.0.1",
    "strict-npm-engines": "^0.0.1",
    "tmp-promise": "^3.0.3",
    "ts-node": "^10.4.0",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.7.2"
  },
  "overrides": {
    "braces": "^3.0.3",
    "cross-spawn": "7.0.5",
    "tmp": "0.2.4"
  }
}
